= provide(:title, 'New Story')

.w-full.max-w-contentmax.mx-auto{ "data-controller": "story" }
  .mx-6.md:mx-0.mb-4.flex.justify-between.text-sm.h-10.items-center.sticky.top-4.bg-secondary.p-4.shadow-sm
    %div.py-1.px-2.rounded.bg-green-200
      Publish
    %div
      %span.py-1.px-2.rounded.bg-white.font-medium.text-secondary
        Edit
      %span.py-1.px-2.ml-1.rounded.text-white.border
        Preview
  .mx-6.md:mx-0
    = form_with model: @story do |form|
      = render partial: "form", locals: { form: form }
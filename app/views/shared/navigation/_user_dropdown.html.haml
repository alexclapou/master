.shadow.w-220.shadow.rounded.text-sm.border.bg-white.hidden{"data-account-target": "dropdown" }
  .p-4
    .mb-3
      .text-primary
        = current_user.name
      .text-fade.text-xs.font-light
        = current_user.email
    = link_to user_path(current_user) do
      .py-2.px-4-5.rounded.m-px.text-primary.text-xs.flex.items-center.justify-center.border.border-primary.hover:bg-behindfade
        View Profile
  .hidden.md:block
    = link_to new_story_path do
      .px-4.py-2-5.hover:bg-behindfade
        Create Story
  = link_to edit_user_path(current_user) do
    .px-4.py-2-5.hover:bg-behindfade.border-b
      Settings
  = link_to destroy_user_session_path, data: {turbo_method: :delete} do
    .px-4.py-2-5.hover:bg-behindfade
      Sign Out
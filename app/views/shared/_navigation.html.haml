%nav.h-19.px-4.border-b.border-behindfade
  .max-w-pagemax.mx-auto.w-full.py-3.h-full.font-light
    .h-full.flex.items-center.justify-between
      -# logo
      = link_to root_path do
        .flex.items-end.gap-2
          .w-10.flex.items-center
            = image_tag 'logo.png'
          .font-semibold.text-md.text-primary
            Pe Caiet

      -# actions
      .flex.items-center.text-base.text-fade
        .mr-5
          = link_to root_path do 
            %i.w-9.h-9.p-2.rounded-full.hover:bg-behindfade{"data-feather" => "search"}
        - if user_signed_in?
          .mr-5
            = link_to root_path do 
              %i.w-9.h-9.p-2.rounded-full.hover:bg-behindfade{"data-feather" => "bell"}
        - else
          .mr-5.hover:text-primary
            = link_to 'Sign In', new_user_session_path
          .mr-2.sm:mr-5.hover:text-primary
            = link_to 'Sign Up', new_user_registration_path
        .hidden.sm:block
          = link_to root_path do
            .bg-secondary.py-2-5.px-4-5.rounded.m-px.text-white.text-sm.hover:bg-primary
              Create Story
        - if user_signed_in?
          .ml-5
            = link_to root_path do
              .bg-behindfade.rounded-full.w-9.h-9.items-center.justify-center.flex.text-sm.font-normal
                - initials = current_user.name_initials
                %span
                  = initials